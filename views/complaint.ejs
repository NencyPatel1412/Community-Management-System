<!-- New complaint -->
<%- include('partials/header') %>

<div class="container" style="min-width:80%; margin:auto;">
  <div class="row col-md-6 col-md-offset-3">
    <div class="panel panel-danger">
      <div class="panel-heading text-center">
          <h4>Raise Complaint</h4>
      </div>
      <div class="panel-body">
          <form action="/complaint" method="POST">
            <label>Category</label>
            <select name="category" class="form-control">
              <option>Car Parking</option>
              <option>Common Area</option>
              <option>Electrical</option>
              <option>Payment</option>
              <option>Plumbing</option>
              <option>Other</option>
            </select> 
            <br>
            <div class="form-group">
              <label>Type</label>
              <div class="form-group">
                <label for="Personal" class="radio-inline">
                  <input type="radio" name="type" id="Personal" value="Personal" required>Personal
                </label>
                <label for="Community" class="radio-inline">
                  <input type="radio" name="type" id="Community" value="Community" required>Community
                </label>
              </div>
            </div>
            <div class="form-group">
              <label for="comment">Description</label>
              <textarea name="description" class="form-control"  type="text" rows="7" id="comment" required></textarea>
            </div>
            <button type="submit" class="btn btn-danger">Submit Complaint</button>
            <a href="/helpdesk" class="btn btn-primary">Cancel</a>
          </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>