<div class="container" style="min-width:80%; margin:auto;">
  <div class="row col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading text-center">
          <h4>Book Hall/Garden</h4>
      </div>
      <div class="panel-body">
       
        
          <form action="/booking" method="POST" id="booking-form">
            <div class="form-group">
              <label for="name">firstName</label>
              <input name="firstName" class="form-control" type="text" id="firstName" value="<%=user.firstName%>" required>
            </div>
            <div class="form-group">
              <label for="name">LastName</label>
              <input name="lastName" class="form-control" type="text" id="lastName" value="<%=user.lastName%>" required>
            </div>
           
            <div class="form-group">
              <label for="name">flat-number</label>
              <input name="flatNumber" class="form-control" type="text" id="flatNumber" value="<%=user.flatNumber%>" required>
            </div>
            <div class="form-group">
              <label for="date">Date</label>
              <input name="date" class="form-control" type="date" id="date" required>
            </div>
            <div class="form-group">
              <label for="startTime">Start Time</label>
              <input name="start_time" class="form-control" type="time" id="startTime" required>
            </div>
            <div class="form-group">
              <label for="endTime">End Time</label>
              <input name="end_time" class="form-control" type="time" id="endTime" required>
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea name="purpose" class="form-control"  type="text" rows="7" id="purpose" placeholder="Garden or Hall:
why you needed:" required></textarea>
            </div>
            <button type="submit" class="btn btn-success">Book Now</button>
            <a href="/bookingAdmin" class="btn btn-primary">Cancel</a>
          </form>

