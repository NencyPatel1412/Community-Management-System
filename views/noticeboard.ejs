<!-- Noticeboard -->
<%- include('partials/header') %>

  <div style="padding:4%; padding-top: 0%; font-family:sans-serif; font-size:14px;">
    <h2
      style="background-color:rgb(51, 51, 51); padding:18px;color:white; text-align: center; border-radius: 1rem; font-size: 20px; max-width: 1000px; margin:auto; margin-bottom: 10px;">
      Noticeboard
    </h2>
    <div class="container container-profile">
      <% if(isAdmin){ %>
        <row>
          <col-4>
            <a href="/notice" class="btn btn-primary btn-md text-uppercase center"
              style="border-radius:3rem; max-width:180px; display: block; margin: auto">
              Create Notice
            </a>
          </col-4>
        </row>
        <% } %>
          <div class="row">
            <% notices.reverse().forEach(function(notice){ %>
              <div class="col">
                <div class="card card-profile my-5" style="margin-top: 10px;">
                  <div class="card-body" style="padding:3% 8% 3%;">
                    <div>
                      <i class="fas fa-paperclip"></i></i> <b>
                        <%= notice.subject %>
                      </b>
                      <p style="padding-left: 20px; color: grey;">
                        <%= notice.date %> - Published by <%= notice.user %>
                      </p>
                      <p style="padding-left: 20px">
                        <%= notice.details %>
                      </p>
                    </div>
                    <! -- delete notice button-->
                      <% if(isAdmin && notice.subject
                        !='Access all important announcements, notices and circulars here.' ) { %>
                        <form action="/notice/<%= notice._id %>" method="POST">
                          <input type="submit" class="btn btn-danger btn-md text-uppercase center"
                            style="border-radius:3rem; max-width:180px; display: block; margin: auto"
                            value="Delete Notice">
                          <% } %>
                  </div>
                </div>
              </div>
              <% }) %>
          </div>
    </div>
  </div>
  <%- include('partials/footer') %>